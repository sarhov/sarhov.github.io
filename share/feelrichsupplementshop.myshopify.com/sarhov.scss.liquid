.styled-radio{
	display: none;
	+ label{
		// border-radius: 3px;
		text-align: center;
		background: #000;
		overflow: hidden;
		border: 1px solid #ccc;
		// padding: 3px;
		color: #fff;
		cursor: pointer;
		transition: all 0.2s;
		display: table-cell;
		// margin-right: 2px;
		width: 27px;
		height: 30px;
		line-height: 30px;
		font-size: 15px;
		border-left: none;
		border-bottom: none;
		border-top: none;
		height: 26px;
		line-height: 25px;
		padding-top: 3px;
		&:last-of-type{
			border-right: none;
		}
		&:hover{
			background: #a07f3f;
			// color: #E9FFE5;
		}

	}
	&:checked + label{
		background: #4FAE3A;
		color: #E9FFE5;
	}
}

.styled-checkbox{
	input[type="checkbox"]{
		display: none;
		+ label{
			width: 25px;
			height: 25px;
			display: inline-block;
			border: 1px solid #ccc;
			position: relative;	
			&:before{
				content: '';	
				position: absolute;
				width: 15px;
				height: 15px;
				transform: scale(0);
				top: 0;
				bottom:0;
				left: 0;
				right: 0;
				background: #C92D33;
				margin: auto;
				transition: all 0.2s;
			}
		}
		&:checked{
			+ label{
				&:before{
					width: 15px;
					height: 15px;
					transform: scale(1);
				}
			}
		}
	}
}

